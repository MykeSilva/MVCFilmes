@model MVCFilmes.Models.FilmesViewModel

@{
    ViewData["Title"] = "Index";
}

<!--                                        Aula 64 Data Annotations   
                                            Aula 66 Pesquisando na base de dados
                                            Aula 67 ViewModel
-->

<h1>Index</h1>

<p>
    <a asp-action="Create">Inserir novo filme</a>
</p>

<!--  (1-66) A controler onde estou guardando a informação é o filmesA  -->

<form asp-controller="FilmesA" asp-action="Index">
    <p>
        Titulo: <input type="text" name="texto" />
        

<!-- (3-67) Vou aprensentar para o controle HTML o select, vou utilizar o Razor para que eu passe o ASP-FOR
    e ele peque um HTML e faça um BIND com o controle (GENERO)
-->
        Generos: <select asp-for="Genero" asp-items="Model.Generos">
            <option value="">Todos</option>
        </select>
        <input type="submit" value="Buscar" />
    </p>
</form>


<table class="table">
    <thead>
        <tr>
            <!--(4-67) Pegando o primeiro objeto da lista -->
            <th>
                @Html.DisplayNameFor(model => model.Filmes[0].Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filmes[0].DataLancamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filmes[0].Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filmes[0].Preco)
            </th>

            <!-- (6-68) -->
            <th>
                @Html.DisplayNameFor(model => model.Filmes[0].Pontos)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>

        <!--(5-67) -->
@foreach (var item in Model.Filmes) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataLancamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <!--(7-68) -->
            <td>
                @Html.DisplayFor(modelItem => item.Pontos)
            </td>


            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
